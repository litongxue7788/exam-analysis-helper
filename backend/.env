# 3. 智谱 (ZhipuAI) 配置
ZHIPU_API_KEY=
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4
ZHIPU_MODEL_ID=glm-4

# 当前使用的模型提供商 (可选: doubao, aliyun, zhipu)
DEFAULT_PROVIDER=doubao
